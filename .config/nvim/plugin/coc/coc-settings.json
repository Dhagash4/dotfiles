{
  // Python
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": false,
  // C++
  "clangd.enabled": true,
  "clangd.compilationDatabaseCandidates": [
    "${workspaceFolder/build/}",
    "${workspaceFolder}"
  ],
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--inlay-hints=false"
  ],
  "clangd.path": "/usr/bin/clangd",
  // LaTeX
  "coc.source.vimtex.filetypes": ["tex"],
  "coc.source.word.filetypes": ["latex", "markdown"],
  // ESLint & Prettier (React Development)
  "eslint.autoFixOnSave": true,
  "prettier.enable": true,
  // TypeScript & JavaScript Configs
  "tsserver.enable": true,
  "javascript.suggestionActions.enabled": true,
  "typescript.suggestionActions.enabled": true,
  // Coc Preferences
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnSave": true,
  // Snippets and Extensions
  "snippets.ultisnips.pythonPrompt": false,
  "snippets.extends": {
    "javascript": ["react"],
    "typescript": ["react"]
  },
  // Inlay hints and diagnostics
  "inlayHint.enable": false,
  "diagnostic.enable": true
}
